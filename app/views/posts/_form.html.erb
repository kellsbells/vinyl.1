<% if current_user.present? %>
  <%= form_for @post, :html => { :class => 'form-horizontal form-model' } do |f| %>
    <div class="form-group">
      <%= f.label :album_name, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :album_name, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :artist, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :artist, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :year, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :year, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :intention, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_field :intention, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.text_area :description, :class => 'text-field form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, :class => 'control-label col-md-2' %>
      <div class="col-md-10">
        <%= f.file_field :image, :class => 'text-field form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit nil, :class => 'btn btn-sky text-uppercase' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    posts_path, :class => 'btn btn-sky text-uppercase' %>
      </div>
    </div>
  <% end %>
<% else %>
  <h3>You must be logged in to post a vinyl (:</h3>
  <%= link_to 'Sign In Here',
      new_user_session_path,
      :class => 'btn btn-sky text-uppercase' %>
<% end %>