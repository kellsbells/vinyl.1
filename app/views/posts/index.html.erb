<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Album name</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Intention</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.album_name %></td>
        <td><%= post.artist %></td>
        <td><%= post.year %></td>
        <td><%= post.intention %></td>
        <td><%= post.description %></td>
        <td><%= post.image %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
